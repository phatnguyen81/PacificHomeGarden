@model pCMS.Models.CatalogSlideShow
@{
    ViewBag.Title = "Slide Show";
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title>Polaroid Photobar Gallery with jQuery</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="description" content="Polaroid Photobar Gallery" />
        <meta name="keywords" content="polaroid, jquery, css3, rotation, image gallery"/>
        
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.5.1.js")"></script>
        <script src="@Url.Content("~/Scripts/galleryview/js/jquery.timers-1.2.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/galleryview/js/jquery.easing.1.3.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/galleryview/js/jquery.galleryview-3.0-dev.js")" type="text/javascript"></script>
        <link rel="stylesheet" href="@Url.Content("~/Scripts/galleryview/css/jquery.galleryview-3.0-dev.css")" type="text/css" media="screen"/>
        <script type="text/javascript">
            $(function () {
                $('#gallery').galleryView({
                    panel_width: 1000,
                    panel_height: 600,
                    panel_scale: 'fit',
                    frame_width: 90,
                    frame_height : 90,
                    show_overlays: true
                });
            });
        </script>
        <style>
            body {font-size:75%;color:#222;background:#fff;font-family: courier, Arial, Helvetica, sans-serif;}
        </style>
    </head>

    <body>
        <div style="text-align: center;" >
            <ul id="gallery">
                @foreach (var picture in Model.Pictures)
                {
                    <li><img src="@picture.PictureUrl" alt="image1" title="@picture.Title" 
                             frame="@picture.ThumbPictureUrl" longdesc="@picture.Description"/></li>
                }
            </ul>
        </div>
    </body>
</html>
