@using PagedList.Mvc
@model pCMS.Models.AlbumPagingModel
@{
    ViewBag.Title = "Customers";
}
<link href="@Url.Content("~/Scripts/prettyPhoto/css/prettyPhoto.css")" rel="stylesheet" type="text/css">
<script src="@Url.Content("~/Scripts/prettyPhoto/js/jquery.prettyPhoto.js")" type="text/javascript"></script>
<style type="text/css" media="screen">
    
    #gallary li
    {
        float: left;
        padding-right: 30px;
        height: 150px;

    }
    #gallary
    {
        list-style: none;
    }
    #gallary .imgwrap
    {
        border: 1px solid;
        width: 90px;
        height: 100px;  
        border: 3px #EEE solid;
        vertical-align: middle;     
        display:table;
    }
    .title {
        font-weight: bold;
        font-family: Corbel;
        font-size: 22px;
        padding-left: 40px;
        padding-top: 20px;
    }
    
</style>
<div style="height:100%; position:relative;">
    <div class="title">
        Customer's Store
    </div>
    <ul id="gallary">
        @foreach (var pic in Model.SearchResults)
        {
            <li>
                <div class="imgwrap" >
                    <div style="display:table-cell;vertical-align:middle;text-align: center;">
                        <a href="@pic.PictureUrl" rel="prettyPhoto[gallery]" title="@pic.Description">
                            <img src="@pic.ThumbPictureUrl"  alt="@pic.Description" />
                        </a>
                    </div>
                </div>
                <div style="width: 90px;text-align: center;">
                    @pic.Description
                </div>
            </li>
        }
    </ul>
    <div class="clr"></div>
    
    <div style="height:30px; position:absolute; bottom:10px; float: left;" >
    @Html.PagedListPager(Model.SearchResults,
                page => Url.Action("Customers", new RouteValueDictionary() {
                   { "Page", page }
                }),
                PagedListRenderOptions.PageNumbersOnly)
    </div>
</div>
<script type="text/javascript">
    $("a[rel^='prettyPhoto']").prettyPhoto();
</script>
