<div id="DivCompany" style="width: 681px; height: 536px; margin: 7px;">
    <div class="DivPageContent" style="height: 534px; border: 1px #efefef solid;">
        <div align="justify" class="ContentInfo" style="height: 493px; overflow: auto;">
            <span style="font-family: Corbel; font-size: 20px; font-weight: nonal;">Pacific Home
                & Garden, Inc.</span>
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td>
                        2195 Alpine Way, Hayward CA 94545 (West Coast, Corp)
                    </td>
                </tr>
                <tr>
                    <td>
                        Tel: 510-259-0199, Fax: 510-259-1183
                    </td>
                </tr>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td>
                        5252 Snapfinger Woods Dr, Decatur GA 30035 (East Coast)
                    </td>
                </tr>
                <tr>
                    <td>
                        Tel: 678-518-8471, Fax: 678-518-8493
                    </td>
                </tr>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td>
                        Contact e-mail is <a rel="nofollow" style="color: #0066CC" ymailto="mailto:info@pacifichomeandgarden.com"
                            target="_blank" href="mailto:info@pacifichomeandgarden.com">info@pacifichomeandgarden.com</a>.
                    </td>
                </tr>
                <tr>
                    <td>
                        Toll Free: 866-439-1583
                    </td>
                </tr>
                <tr>
                    <td>
                        <a rel="nofollow" style="color: #0066CC" target="_blank" href="http://www.pacifichomeandgarden.com">
                            www.pacifichomeandgarden.com</a>
                    </td>
                </tr>
            </table>
            <br />
            <span style="font-family: Corbel; font-size: 20px; font-weight: nonal;">Contact Form.</span><br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <table width="100%" border="0" cellpadding="2" cellspacing="0" style="border: 0px #cdcdcd solid;margin: 15px 0;">
                    <tr>
                        <td align="left" style="width: 140px;">
                            <strong>@Html.LabelFor(model => model.Resale)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.Resale, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.Resale)
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="width: 140px;">
                            <strong>@Html.LabelFor(model => model.BusinessName)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.BusinessName, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.BusinessName)
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="width: 140px;">
                            <strong>@Html.LabelFor(model => model.ContactPerson)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.ContactPerson, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.ContactPerson)
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="width: 140px;">
                            <strong>@Html.LabelFor(model => model.Title)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.Title, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </td>
                    </tr>
                    <tr>
                        <td align="left">
                            <strong>@Html.LabelFor(model => model.PhoneNumber)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.PhoneNumber)
                        </td>
                    </tr>
                    <tr>
                        <td align="left">
                            <strong>@Html.LabelFor(model => model.Email)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.Email, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </td>
                    </tr>
                    
                    <tr>
                        <td align="left">
                            <strong>@Html.LabelFor(model => model.BusinessDescription)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.BusinessDescription, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.BusinessDescription)
                        </td>
                    </tr>
                    <tr>
                        <td align="left">
                            <strong>@Html.LabelFor(model => model.TaxpaperId)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextBoxFor(model => model.TaxpaperId, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.TaxpaperId)
                        </td>
                    </tr>
                    <tr>
                        <td align="left">
                            <strong>@Html.LabelFor(model => model.Message)</strong>:
                        </td>
                        <td align="left">
                            @Html.TextAreaFor(model => model.Message, new { @style = "width:300px; height:75px; border:1px #999 solid;" })
                            @Html.ValidationMessageFor(model => model.Message)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">
                            <strong>@Html.LabelFor(model => model.SecurityCode)</strong>: 
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.SecurityCode, new { @style = "width:50px;" })
                            <img src="@Url.Action("CaptchaImage", "Home")" style="vertical-align: middle;" alt="Security Code" />
                            @Html.ValidationMessageFor(model => model.SecurityCode)
                        </td>
                    </tr>
                    <tr>
                        <td align="left">
                            &nbsp;
                        </td>
                        <td align="left">
                            <input type="submit" onclick=" " class="t-button" value="Send" name="send">
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
@if (TempData["SendContactResult"] != null && !string.IsNullOrWhiteSpace(TempData["SendContactResult"].ToString()))
{
    <script type="text/javascript">
        alert("@TempData["SendContactResult"].ToString()");
    </script>
}

@if (ViewBag.Message != null && !string.IsNullOrWhiteSpace(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#Resale").focus();
    });
</script>