                            @Html.ValidationMessageFor(model => model.Address)
                        </td>
                    </tr>
                    <tr>
                        <td class="title">
                            <span class="required">(*)</span> <strong>@Html.LabelFor(model => model.PhoneNumber)</strong>:
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @style = "width:300px; border:1px #999999 solid;" })
                            @Html.ValidationMessageFor(model => model.PhoneNumber)
                        </td>
                    </tr>
                    <tr>
                        <td class="title">
                            <span class="required">(*)</span> <strong>@Html.LabelFor(model => model.Email)</strong>
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.Email, new { @style = "width:300px; border:1px #999999 solid;" })
